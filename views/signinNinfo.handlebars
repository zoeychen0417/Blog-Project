         <label for="ps">Password(8 characters minimum):</label><br>
         <input type="password" name="password"id="ps" placeholder="Eight characters minimum"size="50" minlength="8" onkeyup='check();'required><br>
         <input type="checkbox" onclick="showPS()">Show Password<br><br>

         <label for="reps">Re-enter Password:</label><br>
         <input type="password" name="repassword" placeholder="Please confirm your password" id="reps" size="50" minlength="8" onkeyup='check();' required>
         <span id='message'></span><br><br>

         <label for="description">Description of yourself:</label><br><br>
         <textarea type="text" id="description" name="description" rows="5" cols="70" placeholder="Enter text here" required></textarea> <br><br>

